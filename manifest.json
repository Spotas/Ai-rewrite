{
    "manifest_version": 3,
    "name": "AI Text Rewriter Pro (Gemini)",
    "version": "2.1",
    "description": "Advanced AI-powered text rewriting with latest Gemini 2.0+ Flash models, custom modes, undo functionality, and comprehensive settings. Enhanced with grammar correction shortcut.",
    "permissions": [
      "storage",      
      "contextMenus", 
      "scripting",    
      "activeTab",
      "notifications"
    ],
    "host_permissions": [
      "<all_urls>"    
    ],
    "background": {
      "service_worker": "background.js"
    },
    "options_page": "options.html",
    "action": {
      "default_title": "AI Text Rewriter Pro Settings",
      "default_popup": "options.html" 
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "commands": {
      "rewrite-humanize": {
        "suggested_key": {
          "default": "Ctrl+Shift+H"
        },
        "description": "Rewrite selected text to be more human-like"
      },
      "rewrite-professional": {
        "suggested_key": {
          "default": "Ctrl+Shift+P"
        },
        "description": "Rewrite selected text in professional tone"
      },
      "rewrite-grammar": {
        "suggested_key": {
          "default": "Ctrl+Shift+G"
        },
        "description": "Fix grammar and spelling in selected text"
      },
      "undo-rewrite": {
        "suggested_key": {
          "default": "Ctrl+Shift+Z"
        },
        "description": "Undo last rewrite"
      }
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }
  
  